<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Botón de menú -->
        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_more"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Menú opciones" />

        <!-- Contenido de la tarjeta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/btnMenu"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textViewTitulo"
                android:text="Título"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#212121"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewAnio"
                android:text="Año"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewGenero"
                android:text="Género"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewResena"
                android:text="Reseña"
                android:textSize="16sp"
                android:textColor="#424242"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado: Pendiente"
                android:textStyle="italic"
                android:layout_marginTop="4dp"/>


            <RatingBar
                android:id="@+id/ratingBarItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:layout_marginTop="16dp"
                android:isIndicator="false"
                android:progressTint="#FFD700"
                android:secondaryProgressTint="#FFD700"
                android:backgroundTint="#FFD700" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
